@{
    ViewBag.Title = "Statistics";
    WebGrid grid = new WebGrid((IEnumerable<Products_Management_System.Models.SelectAllProductsNeedsReOrder_Result>)ViewBag.reOrderProducts);
}

<h2>Statistics</h2>

<h4><strong>Largest Supplier Name:</strong> @(ViewBag.largestSupplierName)</h4>
<h4><strong> Min. Ordered Product Name:</strong> @(ViewBag.minOrderProductName)</h4>

<style>
    tr > th {
        background-color: black;
        padding: 5px 12px;
        border: solid 2px black;
    }
    tr>th>a{
        color:white;
    }
    tr>td {
        padding: 5px 12px;
        border: solid 2px;
    }
</style>

<h3>Products Need ReOrdering</h3>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            @grid.GetHtml()
        </div>
    </div>
</div>